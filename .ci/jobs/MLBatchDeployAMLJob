parameters:
  azureSubscription: ''
  azure_subscription: ''
  location: submodules/DeployMLModelPipelines
  azureresourcegroup: dcibhpdl
  workspacename: dcibhpwsdl
  azureregion: westus2
  aksimagename: dcibhpaksdl
  aks_name: dcibhpaksdl
